<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.widget.ImageView
                android:id="@+id/imageBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@mipmap/my_image_foreground" />

            <TextView
                android:id="@+id/itemtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageBook"
                android:text="@string/titleRV"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/itemforfatter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemtitle"
                android:layout_toEndOf="@+id/imageBook"
                android:text="@string/forfatterRV"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/itemuddannelse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemforfatter"
                android:layout_toEndOf="@+id/imageBook"
                android:text="@string/uddannelseRV"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/itemsemester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemuddannelse"
                android:layout_toEndOf="@+id/imageBook"
                android:text="@string/semesterRV"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/itemstand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemsemester"
                android:layout_toEndOf="@+id/imageBook"
                android:text="@string/standRV"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/itempris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemstand"
                android:layout_toEndOf="@+id/imageBook"
                android:text="@string/prisRV"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>