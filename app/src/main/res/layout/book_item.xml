<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="18dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/titleRV"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/itemforfatter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/forfatterRV"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/itemuddannelse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/uddannelseRV"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/itemsemester"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/semesterRV"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/itemstand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/standRV"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/itempris"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/prisRV"
            android:textColor="@color/black" />


    </LinearLayout>

</androidx.cardview.widget.CardView>